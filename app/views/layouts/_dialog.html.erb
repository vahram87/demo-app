<dialog data-dialog-target="dialog" data-action="mousedown->dialog#backdropClick">
  <button type="button" data-action="click->dialog#close" class="absolute right-4 top-4 text-gray-400 bg-white rounded-md hover:text-gray-500 hover:ring-2 ring-teal-600">
    <svg class="w-6 h-6 pointer-events-none" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
    </svg>
  </button>
  <div class="min-h-full min-w-full px-4 pb-4 pt-5 sm:p-6 inline-block">
    <%= turbo_frame_tag "dialog_content", data: { dialog_target: "content" } %>
  </div>
  <template data-dialog-target="loadingTemplate">
    <div class="animate-pulse">
      <div class="flex-1 space-y-6 py-1">
        <div class="h-2 bg-slate-200 rounded w-1/2"></div>
        <div class="space-y-3">
          <div class="grid grid-cols-3 gap-4">
            <div class="h-2 bg-slate-200 rounded col-span-2"></div>
            <div class="h-2 bg-slate-200 rounded col-span-1"></div>
          </div>
          <div class="h-2 bg-slate-200 rounded"></div>
        </div>
      </div>
    </div>
  </template>
</dialog>
