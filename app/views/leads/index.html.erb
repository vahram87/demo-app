<div class="mx-auto max-w-6xl p-6">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-semibold tracking-tight">Leads</h1>
    <%= link_to "New Lead", new_lead_path,
        class: "inline-flex items-center rounded-xl bg-teal-600 px-4 py-2 text-sm font-medium text-white hover:bg-teal-700" %>
  </div>

  <% if @leads.blank? %>
    <div class="rounded-2xl border border-dashed border-gray-300 p-12 text-center">
      <p class="text-sm text-gray-600">No leads yet.</p>
      <div class="mt-4">
        <%= link_to "Create your first lead", new_lead_path,
            class: "inline-flex items-center rounded-xl bg-teal-600 px-4 py-2 text-sm font-medium text-white hover:bg-teal-700" %>
      </div>
    </div>
  <% else %>
    <div class="overflow-x-auto rounded-2xl border border-gray-200 shadow-sm">
      <table class="min-w-full divide-y divide-gray-200 bg-white">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Name</th>
            <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Email</th>
            <th class="hidden px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600 sm:table-cell">Phone</th>
            <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wide text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @leads.each do |lead| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3"><span class="font-medium text-gray-900"><%= lead.name %></span></td>
              <td class="px-4 py-3 text-gray-700"><%= mail_to lead.email %></td>
              <td class="hidden px-4 py-3 text-gray-600 sm:table-cell"><%= lead.phone %></td>
              <td class="px-4 py-3">
                <div class="flex justify-end gap-2">
                  <%= link_to "Show", lead_path(lead),
                      class: "inline-flex items-center rounded-lg px-3 py-1.5 text-sm font-medium ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
                  <%= link_to "Edit", edit_lead_path(lead),
                      class: "inline-flex items-center rounded-lg px-3 py-1.5 text-sm font-medium ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
                  <%= button_to "Delete", lead_path(lead), method: :delete,
                      form: { data: { turbo_confirm: "Are you sure?" } },
                      class: "inline-flex items-center rounded-lg bg-rose-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-rose-700" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
