<div class="mx-auto max-w-6xl p-6 mt-8">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-semibold tracking-tight">Posts</h1>
    <%= link_to "New Post",
                new_post_path,
                class: "inline-flex items-center rounded-xl bg-teal-600 px-4 py-2 text-sm font-medium text-white hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500" %>
  </div>

  <% if @posts.blank? %>
    <div class="rounded-2xl border border-dashed border-gray-300 p-12 text-center">
      <p class="text-sm text-gray-600">No posts yet.</p>
      <div class="mt-4">
        <%= link_to "Create your first post",
                    new_post_path,
                    class: "inline-flex items-center rounded-xl bg-teal-600 px-4 py-2 text-sm font-medium text-white hover:bg-teal-700" %>
      </div>
    </div>
  <% else %>
    <div class="overflow-x-auto rounded-2xl border border-gray-200 shadow-sm">
      <table class="min-w-full divide-y divide-gray-200 bg-white">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Title</th>
            <th scope="col" class="hidden px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600 md:table-cell">Excerpt</th>
            <th scope="col" class="hidden px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600 sm:table-cell">Created</th>
            <th scope="col" class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wide text-gray-600">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @posts.each do |post| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 align-top">
                <div class="font-medium text-gray-900"><%= post.title.presence || "Untitled" %></div>
                <div class="mt-0.5 text-xs text-gray-500 md:hidden">
                  <%= truncate(post.content.to_s, length: 80) %>
                </div>
              </td>

              <td class="hidden px-4 py-3 align-top text-gray-700 md:table-cell">
                <%= truncate(post.content.to_s, length: 120) %>
              </td>

              <td class="hidden px-4 py-3 align-top text-gray-600 sm:table-cell">
                <time datetime="<%= post.created_at.iso8601 %>">
                  <%= l(post.created_at, format: :short) %>
                </time>
              </td>

              <td class="px-4 py-3 align-top">
                <div class="flex justify-end gap-2">
                  <%= link_to "Show",
                              post_path(post),
                              class: "inline-flex items-center rounded-lg px-3 py-1.5 text-sm font-medium ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>

                  <%= link_to "Edit",
                              edit_post_path(post),
                              data: { turbo_frame: "dialog_content" },
                              class: "inline-flex items-center rounded-lg px-3 py-1.5 text-sm font-medium ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>

                  <%= button_to "Delete",
                                post_path(post),
                                method: :delete,
                                form: { data: { turbo_confirm: "Are you sure?" } },
                                class: "inline-flex items-center rounded-lg bg-rose-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-rose-700" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
